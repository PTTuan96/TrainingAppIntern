<?xml version="1.0" encoding="UTF-8"?>

CREATE TABLE account_tbl (
  `id` INT NOT NULL AUTO_INCREMENT,
  `account_username` VARCHAR(45) NOT NULL,
  `account_email` VARCHAR(45) NOT NULL,
  `account_password` TEXT NOT NULL,
  `account_role` TEXT NOT NULL,
   `account_isAccountNonExpired` BOOLEAN,
   `account_isAccountNonLocked` BOOLEAN,
   `account_isCredentialsNonExpired` BOOLEAN,
   `account_isEnabled` BOOLEAN,
  PRIMARY KEY (`id`));


CREATE TABLE profile_tbl (
`id` INT NOT NULL AUTO_INCREMENT,
  `profile_name` VARCHAR(45) NULL,
  `profile_email` VARCHAR(45) NULL,
  `profile_phone` VARCHAR(45) NULL,
  `profile_age` VARCHAR(45) NULL,
  `profile_gender` VARCHAR(45) NULL,
  `profile_address` VARCHAR(45) NULL,
  `profile_avatar` TEXT NULL,
  `id_team` INT NULL,
  PRIMARY KEY (`id`));
